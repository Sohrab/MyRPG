						<TextBlock TextWrapping="Wrap" Text="Cost:" FontSize="12" Height="19" Margin="0,7,0,0"/>
						<Button Content="Buy" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="38" Margin="-2,10,48,0">
